<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/tv_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pilihan Makanan"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/rg_menu"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_nasi_goreng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Goreng"/>

        <RadioButton
            android:id="@+id/rb_mie_goreng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mie Goreng"/>

        <RadioButton
            android:id="@+id/rb_bihun_goreng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bihun Goreng"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topping : "
        app:layout_constraintTop_toBottomOf="@id/rg_menu"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/cbSosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_topping"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Sosis"/>

    <CheckBox
        android:id="@+id/cbBakso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbSosis"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Bakso"/>

    <CheckBox
        android:id="@+id/cbAtiAmpela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbBakso"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ati Ampele"/>

    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbAtiAmpela"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Check Out"/>

    <TextView
        android:id="@+id/tv_pesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan Pesanan : "
        app:layout_constraintTop_toBottomOf="@id/btn_pesan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_pil_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_pesanan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_toping_tambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topping Tambahan : "
        app:layout_constraintTop_toBottomOf="@id/tv_pil_makanan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_tooping_pilihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toping Pilihan"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_toping_tambahan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>